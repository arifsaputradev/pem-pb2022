<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_nim"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/input_nim"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_tugas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/input_nama"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_ntugas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/input_ntugas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%" />
            <EditText
                android:id="@+id/htugas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_nuts"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="N. UTS"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/input_nuts"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35%" />
            <EditText
                android:id="@+id/huts"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_nuas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="N. UAS"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/input_nuas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35%" />
            <EditText
                android:id="@+id/huas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_nakhir"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="N. Akhir"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/nakhir"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_nhuruf"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="N. Huruf"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/nhuruf"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_predikat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Predikat"
                android:textColor="@color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/predikat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/button_hitung"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4dp"
                android:text="Hitung"/>
            <Button
                android:id="@+id/button_keluar"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4dp"
                android:text="Keluar"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>