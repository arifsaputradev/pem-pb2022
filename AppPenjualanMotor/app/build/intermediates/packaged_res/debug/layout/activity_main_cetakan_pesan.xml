<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityCetakanPesan"
    android:orientation="vertical"
    android:paddingVertical="50dp"
    android:paddingHorizontal="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PT. A11.2021.13480"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Penjualan Motor"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Nama Pembeli  :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/namaPembeliText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arif Saputra"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Pekerjaan            :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/pekerjaanPembeliText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajer"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Alamat                 :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/alamatPembeliText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semarang"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Beli Unit                :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/beliUnitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PCX e-CVT"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Harga                   :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/hargaAwalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 32,500,000"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Jumlah                :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/jumlahBeliText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 buah"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Total                     :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/totalSebelumPajakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 648,000,000"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="PPN                        :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/pajakText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Bayar                    :"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/totalBayarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 770,000,000"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>