<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingHorizontal="10dp"
    android:background="@color/abu">
        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="10"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">
        <androidx.cardview.widget.CardView
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@color/white"
            android:layout_height="220dp">
            <RelativeLayout
                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/mobilImageView"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/mobil1" />

                <TextView
                    android:id="@+id/namaMobilText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobilImageView"
                    android:text="Toyota Rush"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/kodeMobilText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namaMobilText"
                    android:text="(M2321)"
                    android:textSize="12dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/hargaMobilText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kodeMobilText"
                    android:text="Rp. 4000000000"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/satuanMobilText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_below="@id/hargaMobilText"
                    android:layout_marginTop="0dp"
                    android:text="/unit"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>