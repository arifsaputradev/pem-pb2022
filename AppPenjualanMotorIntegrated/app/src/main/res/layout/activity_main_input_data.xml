<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityInputData">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="40dp"
        android:text="Tambah Data Motor"
        android:textAlignment="center"
        android:textColor="@color/blue_500"
        android:textSize="28dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">
            <EditText
                android:id="@+id/kodeMotorET"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/radius_white"
                android:elevation="4dp"
                android:hint="Kode"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textSize="14dp" />
            <EditText
                android:id="@+id/namaMotorET"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/radius_white"
                android:elevation="4dp"
                android:hint="Nama"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">
            <EditText
                android:id="@+id/stokMotorET"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/radius_white"
                android:elevation="4dp"
                android:hint="Stok"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="14dp" />
            <EditText
                android:id="@+id/satuanMotorET"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/radius_white"
                android:elevation="4dp"
                android:hint="Satuan"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">
            <EditText
                android:id="@+id/hargaMotorET"
                android:layout_width="340dp"
                android:layout_height="48dp"
                android:paddingHorizontal="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/radius_white"
                android:elevation="4dp"
                android:hint="Harga"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp">

            <Button
                android:id="@+id/pilihImage"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/radius_white"
                android:elevation="4dp"
                android:paddingHorizontal="20dp"
                android:text="Pilih Gambar"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="10dp"
                android:padding="2dp"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/previewImage"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ic_image"
                    android:background="@color/abu"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Button
            android:id="@+id/inputButton"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Input Data"
            android:textAllCaps="false"
            android:background="@drawable/radius"/>
    </LinearLayout>
</RelativeLayout>